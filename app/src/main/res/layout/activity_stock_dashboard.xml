<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StockDashboard">

    <TextView
        android:id="@+id/dashboard_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/topic_dashboard"
        android:textColor="@color/black"
        android:textSize="@dimen/topic_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />

    <ImageView
        android:id="@+id/dasboard_image"
        android:layout_width="318dp"
        android:layout_height="306dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23000002"
        app:srcCompat="@drawable/order_food" />

    <Button
        android:id="@+id/btn_view"
        android:layout_width="@dimen/normal_btn_width"
        android:layout_height="@dimen/normal_btn_height"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/btn_view"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_btn_font_size"
        app:cornerRadius="@dimen/normal_btn_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dasboard_image"
        app:layout_constraintVertical_bias="0.211" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="@dimen/normal_btn_width"
        android:layout_height="@dimen/normal_btn_height"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/btn_add"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_btn_font_size"
        app:cornerRadius="@dimen/normal_btn_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_view"
        app:layout_constraintVertical_bias="0.274" />

    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="76dp"
        android:layout_height="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.205"
        app:srcCompat="@drawable/outline_settings_24" />
</androidx.constraintlayout.widget.ConstraintLayout>